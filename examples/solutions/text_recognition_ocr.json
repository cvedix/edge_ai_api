{
  "solutionId": "text_recognition_ocr",
  "solutionName": "Text Recognition (OCR)",
  "solutionType": "text_recognition",
  "isDefault": false,
  "pipeline": [
    {
      "nodeType": "file_src",
      "nodeName": "file_src_{instanceId}",
      "parameters": {
        "file_path": "${FILE_PATH}",
        "channel": "0",
        "resize_ratio": "${RESIZE_RATIO}"
      }
    },
    {
      "nodeType": "ppocr_text_detector",
      "nodeName": "ppocr_detector_{instanceId}",
      "parameters": {
        "det_model_dir": "${OCR_DET_MODEL_DIR}",
        "rec_model_dir": "${OCR_REC_MODEL_DIR}",
        "cls_model_dir": "${OCR_CLS_MODEL_DIR}",
        "use_angle_cls": "${USE_ANGLE_CLS}",
        "lang": "${OCR_LANG}"
      }
    },
    {
      "nodeType": "text_osd",
      "nodeName": "text_osd_{instanceId}",
      "parameters": {
        "font_path": "${FONT_PATH}"
      }
    },
    {
      "nodeType": "screen_des",
      "nodeName": "screen_des_{instanceId}",
      "parameters": {
        "channel": "0",
        "enabled": "${ENABLE_SCREEN_DES}"
      }
    },
    {
      "nodeType": "rtmp_des",
      "nodeName": "rtmp_des_{instanceId}",
      "parameters": {
        "rtmp_url": "${RTMP_URL}",
        "channel": "0"
      }
    }
  ],
  "defaults": {
    "detectorMode": "SmartDetection",
    "detectionSensitivity": "0.7",
    "sensorModality": "RGB",
    "RESIZE_RATIO": "1.0",
    "ENABLE_SCREEN_DES": "true",
    "USE_ANGLE_CLS": "true",
    "OCR_LANG": "ch",
    "FONT_PATH": "./cvedix_data/font/NotoSansCJKsc-Medium.otf"
  }
}

